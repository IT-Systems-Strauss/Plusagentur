<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="stock_location_inherit_view" model="ir.ui.view">
            <field name="name">sotck_location_inherit_view</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[1]/group[1]" position="after">
                    <group>
                        <field name="is_magento_source"/>
                        <field name="partner_id" attrs="{'invisible': [('is_magento_source', '=', False)], 'required': [('is_magento_source', '=', True)]}"/>
                        <field name="country_id" attrs="{'invisible': [('is_magento_source', '=', False)], 'required': [('is_magento_source', '=', True)]}"/>
                        <field name="post_code" attrs="{'invisible': [('is_magento_source', '=', False)], 'required': [('is_magento_source', '=', True)]}"/>
                    </group>

                </xpath>
